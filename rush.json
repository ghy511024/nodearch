
{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.117.9",
  "pnpmVersion": "8.8.0",
  "pnpmOptions": {
    "strictPeerDependencies": true,
    "useWorkspaces": true
  },
  "nodeSupportedVersionRange": ">=18.15.0",
  "ensureConsistentVersions": true,
  "projectFolderMinDepth": 2,
  "projectFolderMaxDepth": 2,
  "approvedPackagesPolicy": {
    "reviewCategories": [
      "production",
      // projects that ship to production
      "tools",
      // non-shipping projects that are part of the developer toolchain
      "prototypes"
      // experiments that should mostly be ignored by the review process
    ]
  },
  "gitPolicy": {
  },
  "repository": {
    "url": "https://github.com/nodearch/nodearch.git",
    "defaultBranch": "master",
    "defaultRemote": "origin"
  },
  "eventHooks": {
    "preRushInstall": [
    ],
    "postRushInstall": [],
    "preRushBuild": [],
    "postRushBuild": []
  },
  "projects": [
    // ============= Main =============
    {
      "packageName": "@ghy_test_nodearch/core",
      "projectFolder": "lib/core",
      "reviewCategory": "production",
      "versionPolicyName": "packages"
    },
    {
      "packageName": "@ghy_test_nodearch/command",
      "projectFolder": "lib/command",
      "reviewCategory": "production",
      "versionPolicyName": "packages"
    },
    {
      "packageName": "@ghy_test_nodearch/cli",
      "projectFolder": "lib/cli",
      "reviewCategory": "production",
      "versionPolicyName": "packages"
    },
    {
      "packageName": "@ghy_test_nodearch/template-express",
      "projectFolder": "templates/express",
      "reviewCategory": "prototypes",
      "shouldPublish": false
    },
    {
      "packageName": "@ghy_test_nodearch/template-socket.io",
      "projectFolder": "templates/socket.io",
      "reviewCategory": "prototypes",
      "shouldPublish": false
    },
    // ============= Extensions =============
    {
      "packageName": "@ghy_test_nodearch/mocha",
